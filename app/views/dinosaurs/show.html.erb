<div class="container">

  <div id="header" class="row">
    <div class="col-sm-12">
      <div class="title">
        <h1><%= @dinosaur.name %></h1>
      </div>

    </div>
  </div>

  <div>
    <div id="top" class="row">
      <div id="photo" class="col-sm-12 mb-2">
      <img class= "card-img" src="<%= (@dinosaur.photo.attached? ? cl_image_path(@dinosaur.photo.key) : asset_path("default_dino.jpeg")) %>">
      </div>
        <%= render "bookings/form", dinosaur: @dinosaur, booking: @booking %>
    </div>
  </div>

  <div id="details" class="row">
    <div id="details-row" class="col-sm-12">
          <p><strong>Name: </strong><%= @dinosaur.name %></p>
          <p><strong> Age: </strong><%= @dinosaur.age %></p>
          <p><strong>Description: </strong><%= @dinosaur.description %></p>
    </div>
  </div>

  <div id="links" class="row">
    <div class="col-sm-12">
    <ul>
      <li class="btn btn-delete"><i class="fa-solid fa-backward"></i><%= link_to " Back to Dinos", dinosaurs_path %></li>
      <li class="btn btn-delete"><i class="fas fa-trash"></i><%= link_to " Delete this dinosaur", dinosaur_path(@dinosaur),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    </ul>
    </div>
  </div>

</div>
